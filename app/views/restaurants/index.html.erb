<div class="container my-3">
  <div class="row">
    <div class="col">
      <h1>All restaurants</h1>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li><%= restaurant.name %><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-info btn-sm m-1 " %></li>
        <% end %>
      </ul>
      <hr>
      <%= link_to "Create a new restaurant", new_restaurant_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
