<div class="container my-3">
  <div class="row">
    <div class="col">
      <h1><%= @restaurant.name %></h1>
      <ul>
        <li>Category: <%= @restaurant.category %></li>
        <li>Address: <%= @restaurant.address %></li>
        <li>Tel: <%= @restaurant.phone_number %></li>
      </ul>
      <hr>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item my-3"><%= review.content %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
  <%= render 'reviews/new' %>
  <hr>
  <%= link_to '<< Back', restaurants_path, class: "btn btn-secondary btn-sm" %>
</div>



